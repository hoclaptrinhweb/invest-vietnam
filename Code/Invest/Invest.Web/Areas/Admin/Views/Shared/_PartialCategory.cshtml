@model IEnumerable<Invest.Core.Category>
@{
    var count = 0;
}

<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Create", "Category", new { area ="Admin"},null)"><i class="icon icon-color icon-add"></i>Create New</a>
    </div>
</div>
<div class="span3 pull-right">
    <div class="btn-group pull-right">
        <a class="btn btn-cancel" href="#">Actions</a>
        <a class="btn btn-cancel dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a id="btnChangeStatusSupp"><i class="icon-pencil"></i>Đổi trạng thái</a></li>
            <li class="divider"></li>
        </ul>
    </div>
</div>

<div style="clear:both;margin-bottom:10px"></div>

<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <tr>
        <th style=" width:10px" class="center">@Html.CheckBox("Select", false, new { id = "suppCheckALL" })</th>
        <th style=" width:25px">Stt</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </th>
        <th class="centerheader" style=" width:75px; text-align:center">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        count = count + 1;
    <tr>
        <td class="center">@Html.CheckBox("Select", false, new { id = "selectSupp_" + @item.Id })</td>
        <td>@count</td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Published)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayOrder)
        </td>
        <td style="text-align:center">
            <a class="ajax-link" href="@Url.Action("Edit", "Category", new { id = item.Id })"><span class="icon icon-color icon-edit"></span></a>
            @*<a id="deleteSupp_@item.Id" name="@item.Name"><span class="icon icon-color icon-trash"></span></a>*@
        </td>
    </tr>
    }
</table>

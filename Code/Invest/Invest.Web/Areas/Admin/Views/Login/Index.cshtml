@model UserModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="row-fluid">
            <div class="span12 center login-header">
                <h2>Welcome to Invest-VietNam.vn</h2>
            </div>
        </div>
        <div class="row-fluid">
            <div class="well span5 center login-box">
                <div class="alert alert-info">
                    Please login with your Username and Password.
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <fieldset>
                        <div class="input-prepend" title="Username" data-rel="tooltip">
                            <span class="add-on"><i class="icon-user"></i></span>
                            @Html.TextBoxFor(u => u.UserName, new { @class = "input-large span10" })
                            @Html.ValidationMessageFor(u => u.UserName)
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend" title="Password" data-rel="tooltip">
                            <span class="add-on"><i class="icon-lock"></i></span>
                            @Html.PasswordFor(u => u.Password, new { @class = "input-large span10" })
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <div class="clearfix"></div>
                        <div class="input-prepend">
                            <label class="remember" for="remember">
                                @Html.CheckBoxFor(u => u.RememberMe, new { @id = "remember" }) Remember me
                            </label>
                        </div>
                        <div class="clearfix"></div>
                        <p class="center span5">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </p>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
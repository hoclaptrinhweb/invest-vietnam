<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @if (IsSectionDefined("META_INC"))
    {
        @RenderSection("META_INC")
    }
    <meta name="bitly-verification" content="811bf9d76554" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta content="INDEX,FOLLOW" name="robots" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="copyright" content="Công ty Cổ phần" />
    <meta name="author" content="Công ty Cổ phần" />
    <meta http-equiv="audience" content="General" />
    <meta name="resource-type" content="Document" />
    <meta name="distribution" content="Global" />
    <meta name="revisit-after" content="1 days" />
    <meta name="GENERATOR" content="Công ty Cổ phần" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta property="og:site_name" content="invest-vietnam.vn" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="vi_VN" />
    <meta property="fb:app_id" content="505429329544659" />
    <link href="~/Content/bootstrap-3.1.1-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-3.1.1-dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Default.css" rel="stylesheet" />
    <link href="~/Content/flexslider.css" rel="stylesheet" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="pull_left">
                        <ul class="list-inline" style="margin-top:7px">
                            <li><a href="#"><span class="glyphicon glyphicon-plus"></span>@Resource("Register")</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-lock"></span>@Resource("Login")</a></li>
                            <li><a href="/Admin/"><span class="glyphicon glyphicon-user"></span>@Resource("Admin")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <ul class="list-inline pull-right" style="margin-top:7px">
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "en-us" })"><img src="~/content/img/banner/us.gif" /> En</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "ja-JP" })"><img src="~/content/img/banner/ja.jpg" /> Ja</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "ko-KR" })"><img src="~/content/img/banner/ko.jpg" /> Ko</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <a href="@Url.Content("~/")">
                            <img class="img-responsive" src="~/content/img/banner/logo.png">
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <form class="navbar-form navbar-right" role="search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="nav navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#headmenu">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>
                    @Html.Action("HeadMenu", "Home")
                </div>
            </div>
            <div id="banner">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="col-xs-4">
                            <img class="img-responsive" src="~/content/img/banner/why.jpg" />
                        </div>
                        <div class="col-xs-4">
                            <img class="img-responsive" src="~/content/img/banner/where.jpg" />
                        </div>
                        <div class="col-xs-4">
                            <img class="img-responsive" src="~/content/img/banner/what.jpg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        @Html.Action("SliderBar", "Home")
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <a href="@Url.Content("~/")">
                        <img class="img-responsive" src="~/content/img/banner/logo.png">
                    </a>
                </div>
                <div class="col-sm-8">
                    <p>
                        <h3>Công ty Cổ phần Invest-VietNam</h3>
                        <div>
                            Ấp 3, Xã Long Hậu, Huyện Cần Giuộc, Tỉnh Long An<br>
                            Điện thoại: <a href="tel:+848 37818929">(08) 3781 8929</a> - <a href="tel:+848 3781 8929">(08) 3781 8929</a> - Fax: (08) 3781 8940<br>
                            Phòng Tiếp Thị Kinh Doanh: <a href="tel:+848 3937 559">(08) 3937 5599</a> &nbsp;<br>
                            Email: <a href="mailto:info@invest-vietnam">info@invest-vietnam</a>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="~/Content/bootstrap-3.1.1-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.carouFredSel-6.2.1-packed.js"></script>
    <script src="~/Content/js/jquery.flexslider.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#foo4').carouFredSel({
                responsive: true,
                width: '100%',
                scroll: {
                    items: 1,
                    duration: 500,
                    pauseOnHover: true
                },
                items: {
                    width: 200,
                    visible: {
                        min: 1,
                        max: 6
                    }
                },
                prev: {
                    button: '#next'
                },
                next: {
                    button: '#prev'
                }
            });
            $('.flexslider').flexslider({
                animation: "slide",
                start: function (slider) {
                    $('body').removeClass('loading');
                }
            });

        });

        $(window).on('load', function () {
            $('.selectpicker').selectpicker({
                'selectedText': 'cat'
            });
        });
    </script>
    @Html.Partial("~/Views/Common/GoogleAnalytic.cshtml")
</body>
</html>
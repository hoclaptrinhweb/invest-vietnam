                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="header-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <a href="@Url.Content("~/")">
                            <img class="img-responsive" src="~/content/img/banner/logo.png">
                        </a>
                    </div>
                    <div class="col-sm-6">
                        <form class="navbar-form navbar-right" role="search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="nav navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#headmenu">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    @Html.Action("HeadMenu", "Home")
                </div>
            </div>
            <div id="banner">
                <div class="container-fluid">
                    <div class="row-fluid">
                        <div class="col-xs-4">
                            <a href="@Url.Action("Index", "Category", new { Name = "why-vietnam", Id = 1 })">
                                <img class="img-responsive" src="~/content/img/banner/why.jpg" />
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <a href="@Url.Action("Index", "Category", new { Name = "why-vietnam", Id = 1 })">
                                <img class="img-responsive" src="~/content/img/banner/where.jpg" />
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <img class="img-responsive" src="~/content/img/banner/what.jpg" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        @Html.Action("SliderBar", "Home")
    </div>
    @Html.Partial("~/Views/Common/_Footer.cshtml")
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="~/Content/bootstrap-3.1.1-dist/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.carouFredSel-6.2.1-packed.js"></script>
    <script src="~/Content/js/jquery.flexslider.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#foo4').carouFredSel({
                responsive: true,
                width: '100%',
                scroll: {
                    items: 1,
                    duration: 500,
                    pauseOnHover: true
                },
                items: {
                    width: 200,
                    visible: {
                        min: 1,
                        max: 6
                    }
                },
                prev: {
                    button: '#next'
                },
                next: {
                    button: '#prev'
                }
            });
            $('.flexslider').flexslider({
                animation: "slide",
                start: function (slider) {
                    $('body').removeClass('loading');
                }
            });

        });
    </script>
    @if (IsSectionDefined("JS_INC"))
    {
        @RenderSection("JS_INC")
    }
    @Html.Partial("~/Views/Common/GoogleAnalytic.cshtml")
</body>

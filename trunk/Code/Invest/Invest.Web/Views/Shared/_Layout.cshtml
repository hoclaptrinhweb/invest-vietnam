<body>
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="pull_left">
                        <ul class="list-inline" style="margin-top:7px">
                            <li><a href="#"><span class="glyphicon glyphicon-plus"></span>@Resource("Register")</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-lock"></span>@Resource("Login")</a></li>
                            <li><a href="/Admin/"><span class="glyphicon glyphicon-user"></span>@Resource("Admin")</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <ul class="list-inline pull-right" style="margin-top:7px">
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "en-us" })"><img src="~/content/img/banner/us.gif" /> En</a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { lang = "ja-JP" })"><img src="~/content/img/banner/ja.jpg" /> Ja</a>
                        </li>
                        <li>

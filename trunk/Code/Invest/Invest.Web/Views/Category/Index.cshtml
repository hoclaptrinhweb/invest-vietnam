@{
    ViewBag.Title = "Home Page";
}

@model List<Invest.Core.Category>

<div class="container" id="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="col-xs-12 padding_none">
                <h2>Industries</h2>
                <div class="nav">
                    <ul class="list-group">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item"><a href="@Url.Action("Index","Category",new { Name = item.Name.ConvertToUnSign(), Id = item.Id})">@item.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <h2>Parts and Materials</h2>
            <ol class="breadcrumb">
                <li><a href="#">Why Vietnam</a></li>
                <li><a href="#">8 Reasons to Choose Korea</a></li>
                <li class="active">Data</li>
            </ol>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-sm-6 col-xs-6">
                        <div class="thumbnail">
                            <div>
                                <img class="img-responsive" src="http://www.investkorea.org/publish/data/content/102/01/01/01/img//resons_1[0][0][0][0][0][0].jpg" />
                            </div>
                            <h4><a href="#">@item.Name</a></h4>
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-sm-2">
            <div class="col-xs-12 padding_none">
                <h2>Side</h2>
                <div class="panel panel-primary">
                    <div class="panel-heading">Title</div>
                    <div class="panel-body">
                        Sed ac orci quis tortor imperdiet venenatis. Duis elementum auctor accumsan.
                        Aliquam in felis sit amet augue.
                    </div>
                </div>
                <hr>
                <div class="panel panel-primary">
                    <div class="panel-heading">Parner</div>
                    <div class="panel-body"><img src="http://www.investkorea.org/publish/data/content/921/07/img//140402.jpg" class="img-responsive" /></div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>

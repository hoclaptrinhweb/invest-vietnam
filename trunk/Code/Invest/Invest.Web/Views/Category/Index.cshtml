@{
    ViewBag.Title = "Home Page";
}

@model List<CategoryModel>

<div class="container" id="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="col-xs-12 padding_none">
                <h2>@ViewBag.MenuTitle</h2>
                <div class="nav">
                    <ul class="list-group">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item"><a href="@Url.Action("Index","Category",new { Name = item.Name.ConvertToUnSign(), Id = item.Id})">@item.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <h2>@ViewBag.CurrTitle</h2>
            <ol class="breadcrumb">
                @foreach (var item in (List<CategoryModel>)ViewBag.TreeMenu)
                {
                    <li><a href="">@item.Name</a></li>
                }
            </ol>
            <div class="row">
                @Html.Action("ContentCategory", "Category", new { area = "", id = ViewBag.Id })
            </div>
        </div>
        <div class="col-sm-2">
            <div class="col-xs-12 padding_none">
                <h2>Side</h2>
                <div class="panel panel-primary">
                    <div class="panel-heading">Title</div>
                    <div class="panel-body">
                        Sed ac orci quis tortor imperdiet venenatis. Duis elementum auctor accumsan.
                        Aliquam in felis sit amet augue.
                    </div>
                </div>
                <hr>
                <div class="panel panel-primary">
                    <div class="panel-heading">Parner</div>
                    <div class="panel-body"><img src="http://www.investkorea.org/publish/data/content/921/07/img//140402.jpg" class="img-responsive" /></div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>

@model NewsModel
@section META_INC
    {
    <title>@ViewBag.Title | Invest-Vietnam.vn</title>
    <meta name="keywords" content="@ViewBag.Keyword" />
    <meta name="description" content="@ViewBag.Description" />
    <meta property="og:url" itemprop="url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" itemprop="description" content="@ViewBag.Description" />
    <meta property="og:image" content="@ViewBag.Image" />
    <meta itemprop="image" content="@ViewBag.Image" />
}
<div class="container" id="container">
    <div class="row">
        <div class="col-sm-3">
            @Html.Action("PartialLeftMenu", "Category", new { area = "", id = Model.CategoryId })
        </div>
        <div class="col-sm-7">
            <h2>@Model.Title</h2>
            <ol class="breadcrumb">
                @foreach (var item in (List<Invest.Core.Category>)ViewBag.TreeMenu)
                {
                    <li><a href="">@item.Name</a></li>
                }
                <li class="active">@Model.Title</li>
            </ol>
            <div class="row">
                <div class="col-sm-12 col-xs-12">
                    <article class="article">
                        <p>
                            <span class="glyphicon glyphicon-time"></span> Posted on @Model.CreatedDate
                        </p>
                        <p class="lead">@Model.Short</p>
                        <div>
                            @Html.Raw(Model.Full)
                        </div>
                    </article>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="col-xs-12 padding_none">
                <h2>Side</h2>
                <div class="panel panel-primary">
                    <div class="panel-heading">Title</div>
                    <div class="panel-body">
                        Sed ac orci quis tortor imperdiet venenatis. Duis elementum auctor accumsan.
                        Aliquam in felis sit amet augue.
                    </div>
                </div>
                <hr>
                <div class="panel panel-primary">
                    <div class="panel-heading">Parner</div>
                    <div class="panel-body"><img src="http://www.investkorea.org/publish/data/content/921/07/img//140402.jpg" class="img-responsive" /></div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>
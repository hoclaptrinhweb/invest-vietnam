@model PagedList.IPagedList<NewsModel>
@{
    ViewBag.Title = "News";
}

@Html.Partial("Breadcrumb", new Dictionary<string, string> { { @Resource("Admin.News"), Url.Action("", "News", new { area = "Admin" }, null) } })

<div class="row-fluid">
    <div class="box span12">
        <div class="box-header well">
            <h2>@Resource("Admin.ManaNews")</h2>
        </div>
        <div class="box-content">
            @Html.Partial("_PartialNews", Model)
        </div>
    </div>
</div>

<style>
    .chzn-container .chzn-results .active-result {
        color: black;
        text-shadow: none;
    }
</style>

@section ScriptCustom {
    <!-- select or dropdown enhancer -->
    <script src="~/Content/js/jquery.chosen.min.js"></script>
    <script>
        $(document).ready(function () {
            $('[data-rel="chosen"],[rel="chosen"]').chosen();
        });
    </script>
}

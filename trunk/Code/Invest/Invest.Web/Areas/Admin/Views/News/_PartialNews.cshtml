@model PagedList.IPagedList<NewsModel>

<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Edit", "News", new { area = "Admin" }, null)"><i class="icon icon-color icon-add"></i>@Resource("Admin.CreateNew")</a>
    </div>
</div>
<div class="span3 pull-right">
    <div class="btn-group pull-right">
        @Html.DropDownList("allLanguage", (IEnumerable<SelectListItem>)ViewBag.AllLanguages, new { @data_rel = "chosen", onchange = "onLocaleResourceLanguageSelected(this.value);" })
    </div>
</div>
<div style="clear:both;margin-bottom:10px"></div>
<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LanguageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Published)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedDate)
        </th>
        <th class="center">@Resource("Admin.Actions")</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", "News", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Title)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LanguageName)
            </td>
            <td class="center">
                @if (item.Published)
                {
                    <span class="label label-success">@Resource("Admin.Active")</span>
                }
                else
                {
                    <span class="label">@Resource("Admin.Inactive")</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td class="center">
                <a class="btn btn-info" href="@Url.Action("Edit", "News", new { id = item.Id })"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger delete" id="delete@(item.Id)"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    }

</table>

@Html.Partial("_PartialPaging", Model)

<script>
    function onLocaleResourceLanguageSelected(t) {
        window.location.href = "@Url.Action("", "News")" + "?languageid=" + t;
    }

    $(document).ready(function () {

        var checkboxSuppList = $("input[id^='selectSupp_']");

        $('a[id^="delete"]').click(function (event) {
            if (!confirm('@Resource("Admin.ConfirmDelete")'))
                return;
            event.preventDefault();
            var span = $(this);
            var idArr = new Array();
            idArr[0] = $(this).attr('id').substring(6);
            DeleteNews(idArr);
        });

        function DeleteNews(idArray) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete")',
                data: { ids: idArray },
                beforeSend : popUp(false, '@Resource("Admin.ConfirmSuccess")', false),
                success: function (data) {
                    if (data.success) {
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        popUp(true, data.message, false);
                    }
                },
                dataType: 'JSON',
                traditional: true
            });
        }
    });
</script>
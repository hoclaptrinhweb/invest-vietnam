@model PagedList.IPagedList<SliderBarModel>
<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Create", "SliderBar", new { area ="Admin"},null)"><i class="icon icon-color icon-add"></i>@Resource("Admin.CreateNew")</a>
    </div>
</div>
<div style="clear:both;margin-bottom:10px"></div>
<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ImageUrl)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().ImageLink)</th>
            <th class="center">@Html.DisplayNameFor(model => model.FirstOrDefault().DisplayOrder)</th>
            <th class="center">@Resource("Admin.Actions")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img class="img-responsive" src="@(Url.Content("~/" + item.ImageUrl))" />
            </td>
            <td>
                <a href="@item.ImageLink">@item.ImageLink</a>
            </td>
            <td class="center">
                @item.DisplayOrder
            </td>
            <td class="center">
                <a class="btn btn-danger" id="deleteNews_@item.Id" name="@item.Id"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
@Html.Partial("_PartialPaging", Model)
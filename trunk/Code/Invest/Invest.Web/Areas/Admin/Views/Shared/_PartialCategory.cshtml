@model PagedList.IPagedList<CategoryModel>
@using PagedList.Mvc;
@{
    var count = 0;
}

<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Edit", "Category", new { area ="Admin"},null)"><i class="icon icon-color icon-add"></i>@Resource("Admin.CreateNew")</a>
    </div>
</div>
<div class="span3 pull-right">
    <div class="btn-group pull-right">
        <a class="btn btn-cancel" href="#">@Resource("Admin.Actions")</a>
        <a class="btn btn-cancel dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a id="btnChangeStatusSupp"><i class="icon-pencil"></i>@Resource("Admin.StatusChange")</a></li>
            <li class="divider"></li>
        </ul>
    </div>
</div>

<div style="clear:both;margin-bottom:10px"></div>

<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <tr>
        <th class="center">@Html.CheckBox("Select", false, new { id = "suppCheckALL" })</th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th class="center">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Published)
        </th>
        <th class="center">
            @Html.DisplayNameFor(model => model.FirstOrDefault().DisplayOrder)
        </th>
        <th class="center">
            @Resource("Admin.Actions")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="center">@Html.CheckBox("Select", false, new { id = "selectSupp_" + @item.Id })</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="center">
                @if (item.Published)
                {
                    <span class="label label-success">@Resource("Admin.Active")</span>
                }
                else
                {
                    <span class="label">@Resource("Admin.Inactive")</span>
                }
            </td>
            <td class="center">
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td class="center">
                <a class="btn btn-info" href="@Url.Action("Edit", "Category", new { id = item.Id })"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger" id="deleteSupp_@item.Id" name="@item.Name"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    }
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { qr = ViewBag.CurrentFilter, key = ViewBag.SearchKey, page }),
            new PagedListRenderOptions
            {
                LinkToFirstPageFormat = @Resource("Admin.First"),
                LinkToLastPageFormat = @Resource("Admin.End"),
                LinkToNextPageFormat = @Resource("Admin.Last"),
                LinkToPreviousPageFormat = @Resource("Admin.Next"),
                DisplayLinkToNextPage = PagedListDisplayMode.Always,
                DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                ContainerDivClasses = new string[] { "pagination", "pagination-centered" }
            }
    )


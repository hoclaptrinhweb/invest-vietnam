@model IEnumerable<Invest.Core.Language>
@{
    var count = 0;
}

<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Create", "Language", new { area ="Admin"},null)"><i class="icon icon-color icon-add"></i>Thêm Mới</a>
    </div>
</div>
<div class="span3 pull-right">
    <div class="btn-group pull-right">
        <a class="btn btn-cancel" href="#">Chức năng</a>
        <a class="btn btn-cancel dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <li><a id="btnChangeStatusSupp"><i class="icon-pencil"></i>Đổi trạng thái</a></li>
            <li class="divider"></li>
        </ul>
    </div>
</div>

<div style="clear:both;margin-bottom:10px"></div>

<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <thead>
        <tr>
            <th style=" width:10px" class="center">@Html.CheckBox("Select", false, new { id = "suppCheckALL" })</th>
            <th style=" width:25px">Stt</th>
            <th>Tên ngôn ngữ</th>
            <th>mã ngôn ngữ</th>
            <th class="centerheader" style=" width:75px; text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count = count + 1;
            <tr>
                <td class="center">@Html.CheckBox("Select", false, new { id = "selectSupp_" + @item.Id })</td>
                <td>@count</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UniqueSeoCode)
                </td>

                <td style="text-align:center">
                    <a href='@Url.Action("Edit", "Language", new { id = item.Id })'><span class="icon icon-color icon-edit"></span></a>
                    @*<a id="deleteSupp_@item.Id" name="@item.Name"><span class="icon icon-color icon-trash"></span></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    $(document).ready(function () {

        var checkboxSuppList = $("input[id^='selectSupp_']");

        $('a[id^="deleteSupp_"]').click(function (event) {
            if (!confirm('Bạn có muốn xóa không ?'))
                return;
            event.preventDefault();
            var span = $(this);
            var idArr = new Array();
            idArr[0] = $(this).attr('id').substring(11);
            DeleteSupp(idArr);
        });

        $('span[id^="statusSupp_"]').click(function (event) {
            event.preventDefault()
            var span = $(this);
            var idArr = new Array();
            idArr[0] = $(this).attr('id').substring(11);
            ChangeStatusSupp(idArr);
        });

        $('input#suppCheckALL').change(function () {
            var isCheck = $(this).is(":checked");
            checkboxSuppList.each(function () {
                if (isCheck) {
                    $(this).prop('checked', true);
                    $('#uniform-' + $(this).attr('id') + ' span:first').removeClass('checked');
                    $('#uniform-' + $(this).attr('id') + ' span:first').addClass('checked');
                } else {
                    $(this).prop('checked', false);
                    $('#uniform-' + $(this).attr('id') + ' span:first').removeClass('checked');
                }
            });
        });

        $('a#btnChangeStatusSupp').click(function (event) {
            event.preventDefault();
            var idArr = new Array();
            var stt = 0;
            checkboxSuppList.each(function (index) {
                if ($(this).is(":checked")) {
                    idArr[stt] = parseInt($(this).attr('id').substring(11));
                    stt++;
                }
            });
            ChangeStatusSupp(idArr);
        });

        $('a#btnDeleteSupp').click(function (event) {
            event.preventDefault();
            var idArr = new Array();
            var stt = 0;
            checkboxSuppList.each(function (index) {
                if ($(this).is(":checked")) {
                    idArr[stt] = parseInt($(this).attr('id').substring(11));
                    stt++;
                }
            });
            if (idArr.length == 0) {
                popUp(true, "Bạn chưa chọn Nhà cung cấp nào!", false);
                return;
            }
            if (!confirm('Bạn muốn xóa những Nhà cung cấp được chọn ?'))
                return;

            DeleteSupp(idArr);
        });

        function ChangeStatusSupp(idArray) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("ChangeStatus")',
                data: { ids: idArray },
                success: function (data) {
                    if (data.success) {

                        for (var i = 0; i < idArray.length; i++) {
                            var item = $('#statusSupp_' + idArray[i]);
                            if (item.hasClass("icon-check"))
                                item.attr("class", "icon icon-color icon-cross");
                            else
                                item.attr("class", "icon icon-color icon-check");
                        }

                        checkboxSuppList.each(function () {
                            $(this).prop('checked', false);
                            $('#uniform-' + $(this).attr('id') + ' span:first').removeClass('checked');
                        });

                        $('input#suppCheckALL').prop('checked', false);
                        $('#uniform-suppCheckALL span:first').removeClass('checked');

                        popUp(false, "Cập nhật thành công!", false);
                    } else {
                        popUp(true, data.message, false);
                    }
                },
                dataType: 'JSON',
                traditional: true
            });
        }

        function DeleteSupp(idArray) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete")',
                data: { ids: idArray },
                success: function (data) {
                    if (data.success) {

                        popUp(false, "Cập nhật thành công!", false);

                        setTimeout(function () {
                            location.reload();
                        }, 1500);

                    } else {
                        popUp(true, data.message, false);
                    }
                },
                dataType: 'JSON',
                traditional: true
            });
        }
    });

</script>

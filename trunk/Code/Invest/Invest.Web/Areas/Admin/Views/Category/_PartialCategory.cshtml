@model PagedList.IPagedList<CategoryModel>
@{
    var count = 0;
}
<div class="span3 pull-left">
    <div class="btn-group">
        <a class="btn btn-small" href="@Url.Action("Edit", "Category", new { area ="Admin"},null)"><i class="icon icon-color icon-add"></i>@Resource("Admin.CreateNew")</a>
    </div>
</div>
<div class="span3 pull-right">
    <div class="btn-group pull-right">
        @Html.DropDownList("cat", (IEnumerable<SelectListItem>)ViewBag.CategoryType, new { @data_rel = "chosen", onchange = "onSelected(this.value);" })
    </div>
</div>
<div style="clear:both;margin-bottom:10px"></div>
<table class="table table-striped table-bordered bootstrap-datatable datatable dataTable">
    <tr>
        <th class="center">@Html.CheckBox("Select", false, new { id = "suppCheckALL" })</th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th class="center">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Published)
        </th>
        <th class="center">
            @Html.DisplayNameFor(model => model.FirstOrDefault().DisplayOrder)
        </th>
        <th class="center">
            @Resource("Admin.Actions")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="center">@Html.CheckBox("Select", false, new { id = "selectSupp_" + @item.Id })</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="center">
                @if (item.Published)
                {
                    <span class="label label-success">@Resource("Admin.Active")</span>
                }
                else
                {
                    <span class="label">@Resource("Admin.Inactive")</span>
                }
            </td>
            <td class="center">
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td class="center">
                <a class="btn btn-info" href="@Url.Action("Edit", "Category", new { id = item.Id })"><i class="icon-edit icon-white"></i></a>
                <a class="btn btn-danger" id="delete@(item.Id)" name="@item.Name"><i class="icon-trash icon-white"></i></a>
            </td>
        </tr>
    }
</table>

@Html.Partial("_PartialPaging", Model)

<script type="text/javascript">
    function onSelected(t) {
        window.location.href = "@Url.Action("", "Category")" + "?CategoryType=" + t;
    }

    $(document).ready(function () {

        var checkboxSuppList = $("input[id^='selectSupp_']");

        $('a[id^="delete"]').click(function (event) {
            if (!confirm('@Resource("Admin.ConfirmDelete")'))
                return;
            event.preventDefault();
            var span = $(this);
            var idArr = new Array();
            idArr[0] = $(this).attr('id').substring(6);
            DeleteNews(idArr);
        });

        function DeleteNews(idArray) {

            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete")',
                data: { ids: idArray },
                beforeSend: popUp(false, '@Resource("Admin.ConfirmSuccess")', false),
                success: function (data) {
                    if (data.success) {
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        popUp(true, data.message, false);
                    }
                },
                dataType: 'JSON',
                traditional: true
            });
        }
    });
</script>